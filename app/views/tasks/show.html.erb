<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed == true %>
  <input type="checkbox" checked>
  <label for="task_completed">This task is completed</label>
<% else %>
  <input type="checkbox">
  <label for="task_completed">This task is not completed yet</label>
<% end %>

<%= link_to 'Edit a task', edit_task_path %>

<%= link_to 'back to tasks', tasks_path %>