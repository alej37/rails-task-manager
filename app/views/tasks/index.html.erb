<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <input type="checkbox" name="task_completed" checked>
    <label for="task_title"><%= link_to task[:title], task_path(task[:id]) %></label>
  <% else %>
    <input type="checkbox" name="task_completed">
    <label for="task_title"><%= link_to task[:title], task_path(task[:id]) %></label>
  <% end %>
<% end %>